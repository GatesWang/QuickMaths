<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainMenu">

    <com.wang.gates.quickmaths.custom_views.TitleView
            android:id="@+id/main_menu_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            style="@style/TitleStyle"

    />

    <com.wang.gates.quickmaths.custom_views.ButtonView
        android:id="@+id/timer_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bomb_mode"
        app:layout_constraintHorizontal_bias="0.0"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/timer_mode"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"
        style="@style/ButtonStyle"
    />

    <com.wang.gates.quickmaths.custom_views.ButtonView
            android:id="@+id/bomb_mode"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/high_scores"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bomb_mode"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            app:layout_constraintVertical_bias="1.0"
            style="@style/ButtonStyle"
            app:layout_constraintHorizontal_bias="1.0"/>

    <com.wang.gates.quickmaths.custom_views.ButtonView
            android:id="@+id/high_scores"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/settings"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/high_score"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            app:layout_constraintVertical_bias="1.0"
            style="@style/ButtonStyle"
            app:layout_constraintHorizontal_bias="0.0"/>

    <com.wang.gates.quickmaths.custom_views.ButtonView
            android:id="@+id/settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:layout_marginBottom="@dimen/margin_bottom"
            style="@style/ButtonStyle"
    />

</android.support.constraint.ConstraintLayout>