<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.GameSettings">

    <com.wang.gates.quickmaths.custom_views.Title
            android:id="@+id/settings_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            style="@style/TitleStyle"
    />

    <com.wang.gates.quickmaths.custom_views.Title
            android:id="@+id/music_label"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/music_switch"

            android:text="Music"
            style="@style/TitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="196dp" app:layout_constraintHorizontal_bias="0.219"/>

    <Switch
            android:id="@+id/music_switch"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/music_label"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On"
            android:layout_alignParentRight="true"
            android:layout_marginTop="204dp" app:layout_constraintHorizontal_bias="0.9"/>


</android.support.constraint.ConstraintLayout>