<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.modes.TimerMode">

    <com.wang.gates.quickmaths.custom_views.Title
            android:id="@+id/timer_mode_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/timer_mode"
            style="@style/TitleStyle"
    />

    <!-- difficulty -->
    <Spinner
            android:id="@+id/difficulty_spinner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/time_spinner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.681"/>

    <!-- time -->
    <Spinner
            android:id="@+id/time_spinner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/start_timer_game"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            app:layout_constraintVertical_bias="0.285"
            app:layout_constraintHorizontal_bias="1.0"
    />

    <com.wang.gates.quickmaths.custom_views.Title
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/explanation_size"
            android:text="solve as many as you can"
            style="@style/TitleStyle"
            android:layout_marginTop="224dp"
            app:layout_constraintHorizontal_bias="0.0"
    />

    <Button
            android:id="@+id/start_timer_game"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_game"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:layout_marginBottom="@dimen/margin_bottom"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.991"
            style="@style/ButtonStyle"
    />

</android.support.constraint.ConstraintLayout>