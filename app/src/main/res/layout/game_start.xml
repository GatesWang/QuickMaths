<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.GameStart">

    <com.wang.gates.quickmaths.custom_views.TitleView
            android:id="@+id/game_start_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/timer_mode"
            style="@style/TitleStyle"
    />

    <!-- difficulty -->
    <Spinner
            android:id="@+id/difficulty_spinner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            style="@style/Spinner"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="176dp"/>

    <com.wang.gates.quickmaths.custom_views.TitleView
            android:id="@+id/description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/explanation_size"
            style="@style/TitleStyle"
            android:layout_marginTop="368dp"
            app:layout_constraintHorizontal_bias="0.4"/>

    <com.wang.gates.quickmaths.custom_views.ButtonView
            android:id="@+id/start_game"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_game"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:layout_marginBottom="@dimen/margin_bottom"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.991"
            style="@style/ButtonStyle"
    />

</android.support.constraint.ConstraintLayout>