<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.GameScore">

    <com.wang.gates.quickmaths.custom_views.Title
            android:id="@+id/game_score_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game Over"
            style="@style/TitleStyle"
    />

    <com.wang.gates.quickmaths.custom_views.Title
            android:id="@+id/settings_text_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            android:text="game mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintHorizontal_bias="1.0"
            style="@style/TitleStyle"

            android:layout_marginTop="124dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
    />

    <com.wang.gates.quickmaths.custom_views.Title
            android:id="@+id/score_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:text="score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="376dp"
            style="@style/TitleStyle"
    />

    <com.wang.gates.quickmaths.custom_views.Title
            android:id="@+id/previous_high_score_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:text="previous high score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="244dp"
            style="@style/TitleStyle"
            app:layout_constraintHorizontal_bias="0.25"/>
    <Button
            android:id="@+id/main_menu_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_menu"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:layout_marginTop="520dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:id="@+id/play_again_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_again"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="575dp"/>
</android.support.constraint.ConstraintLayout>